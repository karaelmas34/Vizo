cd ~/dev/.VizoAi/backend
source .venv/bin/activate
./run.sh
# kontrol
curl -s http://127.0.0.1:8001/api/ping


# package.json olan klasöre geç (otomatik bulur)
FR_ROOT=$(dirname "$(find ~/dev/.VizoAi -maxdepth 3 -type f -name package.json | head -n1)")
cd "$FR_ROOT"

# API adresini .env.local ile ayarla
echo 'VITE_API_BASE_URL=http://127.0.0.1:8001' > .env.local

npm install
npm run dev -- --host 0.0.0.0 --port 3000

